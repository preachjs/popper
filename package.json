    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "prettier": "@barelyhuman/prettier-config",
  "devDependencies": {
    "@barelyhuman/prettier-config": "^2.0.2",
    "@biomejs/biome": "^1.9.4",
    "chokidar": "^4.0.3",
    "esbuild": "^0.24.2",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-dts": "^1.3.13",
    "prettier": "^3.4.2",
    "publint": "^0.2.12",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
